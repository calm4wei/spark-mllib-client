<?xml version="1.0"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">

  <!--Copies over all you need to build hbase-->
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <moduleSets>
    <moduleSet>
      <!-- Include all the sources in the top directory -->
      <sources>
        <fileSets>
          <fileSet>
            <!--Make sure this excludes is same as the hbase-hadoop2-compat
                 excludes below-->
            <excludes>
              <exclude>target/</exclude>
              <exclude>test/</exclude>
              <exclude>.classpath</exclude>
              <exclude>.project</exclude>
              <exclude>.settings/</exclude>
            </excludes>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <!-- Include main jar -->
      <directory>${project.basedir}</directory>
      <includes>
        <include>${project.artifactId}-${project.version}.jar</include>
      </includes>
    </fileSet>
    <!--Include shell scripts-->
    <fileSet>
      <directory>${project.basedir}/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!--Include configuration files-->
    <fileSet>
      <directory>${project.basedir}/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <includes>
        <include>razor-spark.conf.template</include>
        <include>log4j.properties</include>
      </includes>
    </fileSet>
    <!--Include dependent jars-->
    <fileSet>
      <directory>${project.basedir}/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!--Include distributed cache files-->
    <fileSet>
      <directory>${project.basedir}/hdfs-files</directory>
      <outputDirectory>hdfs-files</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>

</assembly>
